    <div id="page-content">
        <p>
            <a class="btn btn-outline-secondary" id="btn-pos" data-toggle="collapse" href="#collapseExample"
                role="button" aria-expanded="false" aria-controls="collapseExample">
                POST A BLOG <i class="fa fa-pen mr-5  text-dark fa-fw"></i>
            </a>
        </p>
        <div class="collapse" id="collapseExample">
            <div class="card card-body">
                <div class="jumbotron">
                    <form method="POST" action="/blog">
                        <input class="form-control" type="text" placeholder="Title" name="title">
                        <br>
                        <input class="form-control" type="text" placeholder="Content" name="content">
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
